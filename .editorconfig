root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Shell files â€“ shfmt reads these settings directly
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2
# shfmt-specific keys (see `man shfmt`)
binary_next_line = true
switch_case_indent = true
keep_padding = true

[.envrc]
indent_style = space
indent_size = 2
binary_next_line = true
switch_case_indent = true
keep_padding = true

# Nix
[*.nix]
indent_style = space
indent_size = 2
